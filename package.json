    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.1.2",
        "@types/mocha": "^2.2.48",
        "@types/node": "^9.4.6",
        "chai": "^4.1.2",
        "coveralls": "^3.0.0",
        "istanbul": "1.1.0-alpha.1",
        "mocha": "^5.0.1",
        "mockery": "^2.1.0",
        "prettier": "1.15.3",
        "sinon": "^7.2.2",
        "ts-node": "^5.0.0",
        "tslint": "^5.9.1",
        "tslint-config-prettier": "^1.9.0",
        "typescript": "^2.7.2"
    },
    "dependencies": {
        "get-crypto-fiat-values": "1.1.0",
        "ts-dedent": "^1.0.0"
    }
